<div class="showcontainer">
    
<%= render 'items/brand-concept/brandconceptR',  var:params[:brand_id] %>

<%= render 'items/othertemps/images' %>

 <br><br>
<!--//商品説明文章ここから //-->
<div id="shouhin">
<p><%= @item.itemName %></p>
<p><%= @item.itemDescription %></p>
<br>
</div>

<!--//商品説明ここから //-->
<div id="shouhin_main" >
<!--//商品説明「左」ここから //-->
<div id="shouhin_main_left">
<!--//ブランド //-->
<p id="m-brand">BRAND</p>
<%= render 'items/othertemps/brandlinksAR',  var:params[:brand_id] %>

<!--//詳細 //-->
<p id="m-detail">DETAIL</p>
<p><div class="form-group"><%= @item.itemDetail %></div></p>

<!--//モデル//-->
<% unless @item.modelSizeA.blank? && @item.modelSizeB.blank? %>
<p id="m-model">MODEL</p>
<% unless @item.modelSizeA.blank? %>
<div class="size_person" >
<img src="http://www.rakuten.ne.jp/gold/auc-rodeo/staff_img/staff02.png" style="width:50px; height:55px;float:left;margin:0px 5px 0px 0px;" /> 
モデル: Hide<br>
身長: 170cm<br>
体重: 62kg<br>
サイズ: <%= @item.modelSizeA %>
</div>
<% end %>
<% unless @item.modelSizeB.blank? %>
<div class="size_person" >
<img src="http://www.rakuten.ne.jp/gold/auc-rodeo/staff_img/staff02.png" style="width:50px; height:55px;float:left;margin:0px 5px 0px 0px;" /> 
モデル: Pierre<br>
身長: 173cm<br>
体重: 54kg<br>
サイズ: <%= @item.modelSizeB %>
</div>
<% end %>
<% end %>
<!--//関連 //-->
<% unless @item.totalItemsURLA.blank? && @item.totalItemsURLB.blank? && @item.totalItemsURLC.blank? %>
<div id="clear">
<p id="m-total">TOTAL</p>
モデル着用商品<br><br>
<% unless @item.totalItemsURLA.blank? %><a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLA %>/"><%= @item.totalItemsNameA %></a><% end %>
<% unless @item.totalItemsURLB.blank? %> / <a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLB %>/"><%= @item.totalItemsNameB %></a><% end %>
<% unless @item.totalItemsURLC.blank? %> / <a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLC %>/"><%= @item.totalItemsNameC %></a><% end %>
<% unless @item.totalItemsURLD.blank? %><br><br><a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLD %>/"><%= @item.totalItemsNameD %></a><% end %>
<% unless @item.totalItemsURLE.blank? %> / <a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLE %>/"><%= @item.totalItemsNameE %></a><% end %>
<% unless @item.totalItemsURLF.blank? %> / <a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLF %>/"><%= @item.totalItemsNameF %></a><% end %>
<% unless @item.totalItemsURLG.blank? %><br><br><a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLG %>/"><%= @item.totalItemsNameG %></a><% end %>
<% unless @item.totalItemsURLH.blank? %> / <a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLH %>/"><%= @item.totalItemsNameH %></a><% end %>
<% unless @item.totalItemsURLI.blank? %> / <a href="http://item.rakuten.co.jp/auc-rodeo/<%= @item.totalItemsURLI %>/"><%= @item.totalItemsNameI %></a><% end %>
</div>
<% end%>


</div><!--//左側ここまで//-->

<!--//商品説明「右」ここから //-->
<div id="shouhin_main_right">
<!--//サイズ表//-->
<p id="m-size">SIZE</p>
<%= render 'items/categoryout/sizechartout', var:params[:category] %>

<% unless @item.material.blank? && @item.madein.blank? && @item.process.blank? %>
<!--//素材生産加工など//-->
<p id="m-mate">MATERIAL</p>
<table border="0" width="435" cellspacing="1" cellpadding="5" bgcolor="C0C0C0" STYLE="height: 60px; border-collapse: separate;">
<% unless @item.material.blank? %>
<tr bgcolor="ffffff">
<td align="center" bgcolor="EEEEEE" width="20%">素材</td>
<td><%= @item.material %></td>
</tr>
<% end %>
<% unless @item.madein.blank? %>
<tr bgcolor="ffffff">
<td align="center" bgcolor="EEEEEE" width="20%">生産</td>
<td>
<% if @item.madein == "日本製" %>
<a href="http://item.rakuten.co.jp/auc-rodeo/c/0000001351/" target="_top">日本製</a>
<% else %>
<%= @item.madein %>
<% end %>
</td>
</tr>
<% end %>
<% unless @item.process.blank? %>
<tr bgcolor="ffffff">
<td align="center" bgcolor="EEEEEE" width="20%">加工</td>
<td><%= @item.process %></td>
</tr>
<% end %>
</table>
<% end %>

</div>
</div>
<div id="shouhin_main_bottom">



<!--// 再入荷等ここから //-->
<img src="http://image.rakuten.co.jp/auc-rodeo/cabinet/bana/notes.jpg" style="width:835px; padding-top:18px;margin-bottom:30px;">
</div>

<!--// ブランドリンクここから //-->
<div id="more" >
<%= render 'items/othertemps/brandlinksBR',  var:params[:brand_id] %>
</div>


<!--showcontainer-->
</div>

<!--// 右側のボタンここから //-->
<div class="submitButtons">
<%= link_to "楽天PC", output_rakutenPC_path, class: "btn btn-primary" %>
<%= link_to "楽天SP", output_rakutenSP_path, class: "btn btn-primary" %>
<%= link_to "楽天モバイル", output_rakutenMobile_path, class: "btn btn-primary" %>
<%= link_to "ヤフーPC", output_YahooPC_path, class: "btn btn-primary" %>
<%= link_to "ヤフーSP", output_YahooSP_path, class: "btn btn-primary" %>
<%= link_to "公式PC", output_OfficialPC_path, class: "btn btn-primary" %>
<%= link_to "DeNA", output_DeNA_path, class: "btn btn-primary" %>
<br>
<%= link_to "編集", edit_path, class:"btn btn-primary" %>  
<%= link_to "削除"  , @item, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class:"btn btn-danger" %>
</div>

<style>
.submitButtons {
position:fixed;
right:30px; 
bottom:0px;
width:150px;
height:600px;
}
.submitButtons .btn {
width:100%;	
margin:5px;
}
.deletebutton {
position:absolute;
bottom: 0;
}
</style>

